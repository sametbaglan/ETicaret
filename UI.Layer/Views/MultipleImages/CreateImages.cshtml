@using ETicaret.UILayer.Models.IdentityModels.MainLayoutModel
@model AllLayoutModel
@{
    ViewData["Title"] = "CreateImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <form asp-controller="MultipleImages" asp-action="CreateImages" name="formadd" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            @if (ViewBag.error != null)
                            {
                                <div class="text-danger">@ViewBag.error</div>
                            }
                            <div class="form-group-row">
                                <label class="col-form-label">Seç</label>
                                <div class="custom-file">
                                    <input type="file" name="file" multiple />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-10 offset-md-2">
                                    <button type="submit" id="btn1" class=" center-block btn btn-primary"> Resimleri Ekle</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

