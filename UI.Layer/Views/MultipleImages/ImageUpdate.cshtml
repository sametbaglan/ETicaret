@using ETicaret.UILayer.Models.IdentityModels.MainLayoutModel
@model AllLayoutModel
@{
    ViewData["Title"] = "ImageUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <form asp-controller="MultipleImages" asp-action="ImageUpdate" name="formadd" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Resim</label>
                                 <img src="~/images/@Model.ımage.Image" width="80" />
                            </div>
                            <div class="form-group-row">
                                <label class="col-form-label">Seç</label>
                                <div class="custom-file">
                                    <input type="file" name="file" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-10 offset-md-2">
                                    <button type="submit" id="btn1" class=" center-block btn btn-primary">Ürün Ekle</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
