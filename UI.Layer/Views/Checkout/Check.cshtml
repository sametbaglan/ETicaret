
@{
    ViewData["Title"] = "Check";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Check</h1>


	<section id="cart_items">
		<div class="container">
			<div class="breadcrumbs">
				<ol class="breadcrumb">
				  <li><a href="#">Home</a></li>
				  <li class="active">Check out</li>
				</ol>
			</div><!--/breadcrums-->

		
			<div class="checkout-options">
				
				<ul class="nav">
					<li>
						<label><input type="checkbox"> Adresimi Ekle</label>
					</li>
					
				</ul>
			</div><!--/checkout-options-->

			<div class="register-req">
				<p>Bir sonraki siparişinizde adresinizi kolayca kullanmak için adresimi ekle seçeneğini seçiniz.</p>
			</div><!--/register-req-->

			<div class="shopper-informations">
				<div class="row">
					<div class="col-sm-3">
						
					</div>
					<div class="col-sm-5 clearfix">
						<div class="bill-to">
							<p>Fatura İçin</p>
							<div class="form-one">
								<form>
									<input type="text" placeholder="İsim">
									<input type="text" placeholder="Soyad">
									<input type="text" placeholder="Email*">																	
								</form>
							</div>
							<div class="form-two">
								<form>
									<input type="text" placeholder="Zip / Postal Code *">
									<input type="text" placeholder="Şehir *">
									<input type="text" placeholder="Semt *">
									<input type="text" placeholder="Telefon *">
								</form>
							</div>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="order-message">
							<p>Adres</p>
							<textarea name="message"  placeholder="Adres" rows="16"></textarea>
						</div>	
					</div>					
				</div>
			</div>
			<div class="review-payment">
				<h2>Gözat</h2>
			</div>

			<div class="table-responsive cart_info">
				<table class="table table-condensed">
					<thead>
						<tr class="cart_menu">
							<td class="image">Resim</td>
							<td class="description"></td>
							<td class="price">Fiyat</td>
							<td class="quantity">Miktar</td>
							<td class="total">Toplam</td>
							<td></td>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td class="cart_product">
								<a href=""><img src="images/cart/one.png" alt=""></a>
							</td>
							<td class="cart_description">
								<h4><a href="">Colorblock Scuba</a></h4>
								<p>Web ID: 1089772</p>
							</td>
							<td class="cart_price">
								<p>$59</p>
							</td>
							<td class="cart_quantity">
								<div class="cart_quantity_button">
									<a class="cart_quantity_up" href=""> + </a>
									<input class="cart_quantity_input" type="text" name="quantity" value="1" autocomplete="off" size="2">
									<a class="cart_quantity_down" href=""> - </a>
								</div>
							</td>
							<td class="cart_total">
								<p class="cart_total_price">$59</p>
							</td>
							<td class="cart_delete">
								<a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
							</td>
						</tr>
						<tr>
							<td colspan="4">&nbsp;</td>
							<td colspan="2">
								<table class="table table-condensed total-result">
									<tr>
										<td>Tutar</td>
										<td>$59</td>
									</tr>
									
									<tr class="shipping-cost">
										<td>Kargo Ücreti</td>
										<td>Free</td>										
									</tr>
									<tr>
										<td>Toplam Tutar</td>
										<td><span>$61</span></td>
									</tr>
								</table>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		
		</div>
	</section> <!--/#cart_items-->
