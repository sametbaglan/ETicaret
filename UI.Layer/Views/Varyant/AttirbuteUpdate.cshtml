@model AllLayoutModel
@{
    ViewData["Title"] = "AttirbuteUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        #product__details__tab .nav-tabs {
            border-bottom: none;
            justify-content: center;
        }
    </style>
</head>
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <form asp-controller="Varyant" asp-action="AttirbuteUpdate" name="formadd" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-8">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group-row">
                                <label class="col-md-2 col-form-label"> Beden</label>
                                <div class="col-md-10">
                                    <input asp-for="bodySize.BodyName"  class="form-control" />
                                    <span asp-validation-for="ıtemColor.Color"></span>
                                </div>
                            </div>
                             <div class="form-group-row">
                                <label class="col-md-2 col-form-label"> Beden Miktarı</label>
                                <div class="col-md-10">
                                    <input asp-for="bodySize.BodyCount" class="form-control" />
                                    <span asp-validation-for="ıtemColor.Color"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-10 offset-md-2">
                                    <button type="submit" id="btn1" class="center-block btn btn-primary">Ekle</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>




