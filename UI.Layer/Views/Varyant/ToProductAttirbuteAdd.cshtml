@model AllLayoutModel
@{
    ViewData["Title"] = "ToProductAttirbuteAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <head>
    <style>
        #product__details__tab .nav-tabs {
            border-bottom: none;
            justify-content: center;
        }
    </style>
</head>
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <form asp-controller="Varyant" asp-action="ToProductAttirbuteAdd" name="formadd" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group-row">
                                <label class="col-md-2 col-form-label"> Beden</label>
                                <div class="col-md-10">
                                    <input asp-for="bodySize.BodyName" class="form-control" required="required" />
                                    <span asp-validation-for="bodySize.BodyName"></span>
                                </div>
                            </div>
                            <div class="form-group-row">
                                <label class="col-md-2 col-form-label"> Miktar</label>
                                <div class="col-md-10">
                                    <input asp-for="bodySize.BodyCount" class="form-control" required="required" />
                                    <span asp-validation-for="bodySize.BodyCount"></span>
                                </div>
                            </div>
                            @if (ViewBag.message != null)
                            {
                                <div class="alert-danger">@ViewBag.message</div>
                            }
                            <div class="form-group-row">
                                <div class="table-responsive check-all-parent anyClass" style="width:268%;">
                                    <table class="table table-custom table-hover m-b-0 c_list">
                                        <thead>
                                            <b>Renk</b>
                                            <tr>
                                                <th></th>
                                                <th>Renk</th>
                                                <th>Miktar</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                @if (Model.ıtemColors.Count > 0)
                                                {
                                                    @foreach (var item in Model.ıtemColors)
                                                    {
                                                        <td style="width: 50px;">
                                                            <label class="fancy-checkbox">
                                                                <input class="checkbox-tick selectlist" type="checkbox" value="@item.QuickID" id="checkbottom" name="emptycoloritem">
                                                                <span></span>
                                                            </label>
                                                        </td>
                                                        <td>@item.Color</td>
                                                    }
                                                }
                                                else
                                                {
                                                    <td>Renk Bulunmamaktadır.</td>
                                                }
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <div class="col-md-10 offset-md-2">
                                    <button type="submit" id="btn1" class=" center-block btn btn-primary">Beden Ekle</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

