@model AllLayoutModel
@{
    ViewData["Title"] = "Attirbutes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        #product__details__tab .nav-tabs {
            border-bottom: none;
            justify-content: center;
        }
    </style>
</head>
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <h3>Renk Tablosu</h3>
                @if (Model.ıtemColors.Count > 0)
                {

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Renk </th>
                                <th scope="col">Ürün</th>
                                <th scope="col"></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ıtemColors)
                            {
                                <tr>
                                    <th></th>
                                    <th>@item.Color</th>
                                    @if (item.productid > 0)
                                    {
                                        <td>@ProductListViewModel.returnproduct(item.productid)</td>
                                    }
                                    else
                                    {
                                        <td>Ürün Yok</td>
                                        <td>
                                            <form action="/ItemColor/Delete/" method="post" style="display:inline">
                                                <input type="hidden" name="colorid" value="@item.QuickID" />
                                                <button type="submit" class="btn btn-danger js-sweetalert" title="Delete"><i class="fa fa-trash-o"></i></button>
                                            </form>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">Renk Özelliği Bulunmamaktadır</div>
                }
                <br />

                <h3>Beden Tablosu</h3>
                @if (Model.bodySizes.Count > 0)
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Beden</th>
                                <th scope="col">Miktar</th>
                                <th scope="col">Renk</th>
                                <th scope="col">Ürünler</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bdy in Model.bodySizes)
                            {
                                <tr>
                                    <th></th>
                                    <th>@bdy.BodyName</th>
                                    <th>@bdy.BodyCount</th>
                                    <th>@ProductListViewModel.ReturnColor(bdy.ItemColorid)</th>
                                    @if (bdy.productid > 0)
                                    {
                                        <td>@ProductListViewModel.returnproduct(bdy.productid)</td>
                                    }
                                    else
                                    {
                                        <td>Ürün Yok</td>
                                        <td>
                                            <form action="/ItemBody/Delete/" method="post" style="display:inline">
                                                <input type="hidden" name="bodyid" value="@bdy.BodyID" />           
                                                <button type="submit" class="btn btn-danger js-sweetalert" title="Delete"><i class="fa fa-trash-o"></i></button>
                                            </form>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">Beden Özelliği Bulunmamaktadır</div>
                }
            </div>
        </div>
    </div>
</section>







