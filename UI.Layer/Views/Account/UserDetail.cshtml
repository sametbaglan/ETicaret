@model AllLayoutModel
@{
    ViewData["Title"] = "UserDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        #product__details__tab .nav-tabs {
            border-bottom: none;
            justify-content: center;
        }
    </style>
</head>
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">

                <form asp-controller="Account" asp-action="UserDetail" name="formadd" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-8">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group-row">
                                <label class="col-md-2 col-form-label"> İsim</label>
                                <div class="col-md-10">
                                    <input asp-for="UserInfo.FirstName" value="@Model.UserInfo.FirstName" class="form-control" />
                                    <span asp-validation-for="Product.ReducedPrice"></span>
                                </div>
                            </div>

                            <div class="form-group-row">
                                <label class="col-md-2 col-form-label">Soyad</label>
                                <div class="col-md-10">
                                    <input asp-for="UserInfo.LastName" value="@Model.UserInfo.LastName" class="form-control" />
                                    <span asp-validation-for="UserInfo.LastName"></span>
                                </div>
                            </div>
                            <br />
                            <div class="form-group-row">
                                <label class="col-md-2 col-form-label">Email</label>
                                <div class="col-md-10">
                                    <input type="email" asp-for="UserInfo.Email" value="@Model.UserInfo.Email" class="form-control" disabled="disabled" />
                                </div>
                            </div>
                            <br />
                            <div class="form-group-row">
                                <label class="col-md-2 col-form-label">Şifre</label>
                                <div class="col-md-10">
                                    <input type="password" name="password"  class="form-control" />
                                 
                                </div>
                            </div>
                            <br />
                            <div class="form-group-row">
                                <label class="col-md-2 col-form-label">User Name</label>
                                <div class="col-md-10">
                                    <input asp-for="UserInfo.UserName" value="@Model.UserInfo.UserName" class="form-control" disabled="disabled" />

                                </div>
                            </div>
                            <br />
                            <div class="form-group-row">
                                <label class="col-md-2 col-form-label">Doğum Tarihi</label>
                                <div class="col-md-10">
                                    <input type="datetime" asp-for="UserInfo.DateOfBirth" value="@Model.UserInfo.DateOfBirth.ToShortDateString()" class="form-control" />
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <div class="col-md-10 offset-md-2">
                                    <button type="submit" id="btn1" class=" center-block btn btn-primary">Güncelle</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
