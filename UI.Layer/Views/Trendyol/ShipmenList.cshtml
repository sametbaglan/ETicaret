@model AllLayoutModel
@{
    ViewData["Title"] = "ShipmenList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                               aria-selected="true">Tüm Siparişler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
                               aria-selected="false">Yeni</a>
                        </li>

                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__tab__desc">
                                <h6>Tüm Siparişler</h6>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>İsim Soyad</th>
                                            <th>Adres1</th>
                                            <th>Satış Numarası</th>
                                            <th>Kargo Takip Numarası</th>
                                            <th>Kargo</th>
                                            <th>Kargo Adı</th>
                                            <th>Miktar</th>
                                            <th>Satış Numarası</th>
                                            <th>Beden</th>
                                            <th>Ürün</th>
                                            <th>Renk</th>
                                            <th>Fiyat</th>
                                            <th>Toplam Fiyat</th>
                                        </tr>
                                    </thead>
                                    @for (int i = 0; i < Model.TrendyolShipmenList.Count; i++)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>@Model.TrendyolShipmenList[i].shipmentAddress.firstName @Model.TrendyolShipmenList[i].shipmentAddress.lastName</td>
                                                <td>@Model.TrendyolShipmenList[i].shipmentAddress.fullAddress</td>
                                                <td>@Model.TrendyolShipmenList[i].orderNumber</td>
                                                <td>@Model.TrendyolShipmenList[i].cargoTrackingNumber</td>
                                                <td><a href="@Model.TrendyolShipmenList[i].cargoTrackingLink" target="_blank" class="btn btn-success">Kargo</a></td>
                                                <td>@Model.TrendyolShipmenList[i].cargoProviderName</td>
                                                @for (int k = 0; k < Model.TrendyolShipmenList[i].lines.Count; k++)
                                                {
                                                    <td>@Model.TrendyolShipmenList[i].lines[k].quantity</td>
                                                    <td>@Model.TrendyolShipmenList[i].lines[k].salesCampaignId</td>
                                                    <td>@Model.TrendyolShipmenList[i].lines[k].productSize</td>
                                                    <td>@Model.TrendyolShipmenList[i].lines[k].productName</td>
                                                    <td>@Model.TrendyolShipmenList[i].lines[k].productColor</td>
                                                    <td>@Model.TrendyolShipmenList[i].lines[k].price</td>
                                                }
                                                <td>@Model.TrendyolShipmenList[i].totalPrice</td>
                                            </tr>
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <div class="product__details__tab__desc">
                                @if (Model.NewOrderListGet != null)
                                {
                                    <h6>Yeni</h6>
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>İsim Soyad</th>
                                                <th>Adres1</th>
                                                <th>Satış Numarası</th>
                                                <th>Kargo Takip Numarası</th>
                                                <th>Kargo</th>
                                                <th>Kargo Adı</th>
                                                <th>Miktar</th>
                                                <th>Satış Numarası</th>
                                                <th>Beden</th>
                                                <th>Ürün</th>
                                                <th>Renk</th>
                                                <th>Fiyat</th>
                                                <th>Toplam Fiyat</th>
                                            </tr>
                                        </thead>
                                        @for (int i = 0; i < Model.NewOrderListGet.Count; i++)
                                        {
                                            <tbody>
                                                <tr>
                                                    <td>@Model.NewOrderListGet[i].shipmentAddress.firstName @Model.NewOrderListGet[i].shipmentAddress.lastName</td>
                                                    <td>@Model.NewOrderListGet[i].shipmentAddress.fullAddress</td>
                                                    <td>@Model.NewOrderListGet[i].orderNumber</td>
                                                    <td>@Model.NewOrderListGet[i].cargoTrackingNumber</td>
                                                    <td><a href="@Model.NewOrderListGet[i].cargoTrackingLink" target="_blank" class="btn btn-success">Kargo</a></td>
                                                    <td>@Model.NewOrderListGet[i].cargoProviderName</td>
                                                    @for (int k = 0; k < Model.NewOrderListGet[i].lines.Count; k++)
                                                    {
                                                        <td>@Model.NewOrderListGet[i].lines[k].quantity</td>
                                                        <td>@Model.NewOrderListGet[i].lines[k].salesCampaignId</td>
                                                        <td>@Model.NewOrderListGet[i].lines[k].productSize</td>
                                                        <td>@Model.NewOrderListGet[i].lines[k].productName</td>
                                                        <td>@Model.NewOrderListGet[i].lines[k].productColor</td>
                                                        <td>@Model.NewOrderListGet[i].lines[k].price</td>
                                                    }
                                                    <td>@Model.NewOrderListGet[i].totalPrice</td>
                                                </tr>
                                            </tbody>
                                        }
                                    </table>
                                }
                                else
                                {
                                    <b>Yeni Siparişiniz Yoktur.</b>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>










