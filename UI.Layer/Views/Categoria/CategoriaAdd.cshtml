@model AllLayoutModel
@{
    ViewData["Title"] = "CategoriaAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <style>
        #product__details__tab .nav-tabs {
            border-bottom: none;
            justify-content: center;
        }
    </style>
</head>
<section class="breadcrumb-section set-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">

                <form asp-controller="Categoria" asp-action="CategoriaAdd" name="formadd" method="post" enctype="multipart/form-data">


                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group-row">
                        <label class="col-md-2 col-form-label"> İsim</label>
                        <div class="col-md-10">
                            <input asp-for="categoria.CategoryName" class="form-control" />
                            <span asp-validation-for="categoria.CategoryName"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-5 mt-5">
                            <button style="width:150px;" type="submit" id="btn1" class="btn btn-primary">Ekle</button>
                        </div>
                    </div>


                </form>


            </div>
        </div>
    </div>
</section>


