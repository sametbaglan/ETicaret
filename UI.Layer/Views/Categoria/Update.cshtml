@model AllLayoutModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<html>
<head>
</head>
<body>
    <form asp-controller="Categoria" asp-action="Update" name="formadd" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Ürün Ad</label>
