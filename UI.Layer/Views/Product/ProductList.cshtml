@using UI.Layer.Models.UserModel
@model AllLayoutModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>

        .hero__item {
            height: 431px;
            display: flex;
            align-items: center;
            padding-left: 75px;
            margin-top: 145px;
        }
    </style>
</head>


<div class="hero__item set-bg" data-setbg="/images/banner.jpeg">
   @* <div class="hero__text">
        <span>FRUIT FRESH</span>
        <h2>Vegetable <br />100% Organic</h2>
        <p>Free Pickup and Delivery Available</p>
        <a href="#" class="primary-btn">SHOP NOW</a>
    </div>*@
</div>
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Ana Sayfa</h2>
                </div>
                <div class="featured__controls">
                    @* <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".oranges">Oranges</li>
                        <li data-filter=".fresh-meat">Fresh Meat</li>
                        <li data-filter=".vegetables">Vegetables</li>
                        <li data-filter=".fastfood">Fastfood</li>
                        </ul>*@
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model.Products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/images/@item.ImageUrl">
                            <ul class="featured__item__pic__hover">
                                @* <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>*@
                                <li><a href="/Product/ProductDetail/@item.ProductID"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@item.ProductName</a></h6>
                            @if (@item.ReducedPrice > 0)
                            {
                                <del class="h5">@item.Price TL</del>  <h4>@Convert.ToInt32(DiscountCalculation.percentileCalculation(@item.Price,@item.ReducedPrice))%</h4>
                                <h3>@item.ReducedPrice TL</h3>
                            }
                            else
                            {
                                <h5>@item.Price TL</h5>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
















